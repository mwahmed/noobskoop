<% if signed_in? %>

<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
</br>
	<%=render 'follow_form' if signed_in? %>
</div>
<br />
<h2><u2>Questions Asked:</u> </h2>
