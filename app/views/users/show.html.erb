<% end %> 
    
</td>
    <td class="sidebar round">
      <strong>Name</strong> <a href=<%=@user_path%>> <%=@user.name%></a> </br>

      <strong>Email</strong>  <%= @user.email %>
      <%= render 'shared/stats' %>	
<%= link_to "Ask Question!", href="/d_threads/new", :class=>"signup_button round" %>
</br>
    </td>
  </tr>
</table>
