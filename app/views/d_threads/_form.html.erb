<%= form_for(@t) do |f| %>
  
  <% if @t.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@t.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @t.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  
   <div class="field">
    <%= f.label :question %><br />
    <%= f.text_field :question %>
  </div>
  
   <div class="field">
    <%= f.label :Course_Code %><br />
    <%= f.text_field :courseCode %>
  </div>
  
  <% if @currentUser = current_user %>
		<%= "Author : #{current_user.name} "%>
		<%= @t.user_id = current_user.id %>
		
	<%else%>
		<div class="field">
		  <%= f.label :author %><br />
		  <%= f.text_field :author %>
			<%= link_to 'Login / Sign-up' , '/years/' %>
		</div>
	<% end %> 
 <div class="field">
    <%= f.label :tags %> <%= "(atleast 1, atmost 5; use ',' ';' or ' ' as delimiters )" %> <br />
    <%= f.text_field :tg %>
  </div>
 
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
